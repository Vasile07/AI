// .devcontainer/devcontainer.json
{
    "name": "Python 3",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "3"
        }
    },

    // Add tesseract installation to the postCreateCommand
    "postCreateCommand": "apt-get update && apt-get install -y tesseract-ocr",

    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },

    "extensions": ["ms-python.python"]
}
